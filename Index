    <script>
        // Simple JavaScript for interaction
        document.addEventListener('DOMContentLoaded', function() {
            const recipeCards = document.querySelectorAll('.recipe-card');
            
            recipeCards.forEach(card => {
                card.addEventListener('click', function() {
                    const title = this.querySelector('.recipe-title').textContent;
                    alert(`You selected: ${title}\n\nThis would show the full recipe in a real application.`);
                });
            });
            
            console.log('Recipe page loaded successfully!');
        });
